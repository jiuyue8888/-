.submit-order {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
}

.submit-order .bg {
    position: absolute;
    top: -100rpx;
    left: 0;
    width: 100%;
    height: 1624rpx;
    z-index: -1;
}

.writeAdd {
    position: relative;
    width: 690rpx;
    box-sizing: border-box;
    padding: 20rpx;
    color: #4f4739;
    margin: 34rpx auto 0;
    top: 30rpx;
    background: #f1d6a8;
    border-radius: 30rpx;
    height: 80vh;
    overflow: scroll;
    box-shadow:0 0 20rpx #c3a784;
}
.list{
    position:relative;
    width:100%;
    box-sizing:border-box;
    padding:10rpx 200rpx 10rpx 20rpx;

    border-bottom:1px solid #c3a784;
}
.list .time{
font-size:24rpx;
}
.list .name{
font-size:34rpx;
color:#8f6a30;
margin:10rpx 0;
}
.list .text{
font-size:28rpx;
color:#8f6a30;
}
.list .text text{
color:#a11717;
display:inline-block;
padding:0 10rpx;
}
.list .num{
position:absolute;
top:50rpx;
right:0;
font-size:34rpx;
color:#a11717;
}