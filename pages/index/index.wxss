body {
    font-family: "Microsoft YaHei", 'Arial';
}

image {
    display: block;
    width: 100%;
    padding: 0;
    margin: 0;
    outline-width: 0;
    vertical-align: top;
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0);

    text-decoration: none;
}
.main{
    position: relative;
    width: 100%;
    height: 100vh;
    
    background: #781c18;
}
.main button{
    width: 551rpx;
    height:160rpx;
    padding:0;
    background:transparent;
}
.main button::after{
    border:none;
}
.main-content{
    position:absolute;
    top:80rpx;
    left:0;
    width:100%;

}
.tong{
    width:750rpx;
    height:693rpx;
}
.top-font{
    position:relative;
    width:609rpx;
    height:74rpx;
    margin:0 auto;
}
.top-font image{
    width:609rpx;
    height:74rpx;

}
.top-font text{
    position:absolute;
    top:0;
    left:0;
    width:609rpx;
    height:74rpx;
    line-height:74rpx;
    text-align:center;
    color:#f9e16e;
    font-size:26rpx;
}
.rule{
    width:80%;
    margin:0 auto;
    color:#eed09c;
    font-size:24rpx;
    line-height:40rpx;
}
.rule text{
    display:block;

}
.rule-title{
    font-size:30rpx;
}
.main button image{
    width: 551rpx;
        height:160rpx;
}
.top-img{
    position: relative;
    width: 750rpx;
    height: 1033rpx;
    padding-bottom:100rpx
}
.bottom-img{
    position: relative;
    width: 750rpx;
    height: 551rpx;
}
.hide{
    display: none;
}
.home-pop{
    position: fixed;
    top:0;
    left: 0;
    z-index: 9;
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.8);
}
.pop-body{
    position: absolute;
    top:50%;
    left: 50%;
    width: 600rpx;
    height: 800rpx;
    margin: -400rpx 0 0 -300rpx;
    box-sizing: border-box;
    padding: 40rpx;
    background: #fff;
}